/* styles.qss */

/* Tab bar */
QTabBar::tab {
    background-color: #3498db;
    color: white;
    padding: 8px;
    border-radius: 10px;
    margin: 4px;
}



QTabBar::tab:selected {
    background-color: #2980b9;
}

/* Buttons */
QPushButton {
    background-color: #2ecc71;
    color: white;
    padding: 5px 10px;
    border: none;
    border-radius: 10px; 
}

QTextEdit#aboutText {
    background-color: transparent;
}